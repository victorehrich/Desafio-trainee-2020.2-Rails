<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th style="padding:5px">Livro</th>
      <th style="padding:5px">Cliente</th>
      <th style="padding:5px">Bibliotecario</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @reservations.each do |reservation| %>
    
      <tr>
        <td style="padding:5px"><%= reservation.book.name %></td>
        <td style="padding:5px"><%= reservation.client.name %></td>
        <td style="padding:5px"><%= reservation.librarian.email %></td>
        <td style="padding:5px"><%= link_to 'Show', reservation %></td>
        <td style="padding:5px"><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td style="padding:5px"><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path,:class => "btn btn-primary" %>
