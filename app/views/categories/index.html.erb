<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th style="padding:5px">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td style="padding:5px"><%= category.name %></td>
        <td style="padding:5px"><%= link_to 'Show', category %></td>
        <td style="padding:5px"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td style="padding:5px"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path,:class => "btn btn-primary"%>
